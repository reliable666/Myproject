<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/frm_hot_item_layout">

        <ImageView
            android:id="@+id/frm_hot_item_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launchers" />
      </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frm_hot_item_layout"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/frm_hot_item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名称" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/frm_hot_item_tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="钱" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
